{
  "name": "wc-ducomb-inventory-chat",
  "version": "1.0.0",
  "description": "Real-time inventory lookup system with 5250 protocol automation for WC Ducomb",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "local": "./start-local.sh",
    "backend": "python api/inventory_lookup.py",
    "test": "python -m pytest tests/ -v",
    "test-integration": "INTEGRATION_TEST=1 python -m pytest tests/ -v",
    "test-api": "python test_live_api.py",
    "install-deps": "npm install && pip install -r requirements.txt",
    "setup": "npm run install-deps && npm run test",
    "deploy": "./deploy.sh",
    "deploy-fly": "flyctl deploy",
    "logs": "flyctl logs -a wc-ducomb-inventory",
    "ssh": "flyctl ssh console -a wc-ducomb-inventory",
    "status": "flyctl status -a wc-ducomb-inventory"
  },
  "keywords": [
    "inventory",
    "5250",
    "ibm-i",
    "infor",
    "automation",
    "chat-widget",
    "real-time"
  ],
  "author": "WC Ducomb Development Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "python": ">=3.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/1genadam/wc_ducomb.git"
  },
  "bugs": {
    "url": "https://github.com/1genadam/wc_ducomb/issues"
  },
  "homepage": "https://github.com/1genadam/wc_ducomb#readme"
}
